@page
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RunnerTools.Infrastructure.Identity
@model Activities.Index

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Activities";
}

<h2>Activities</h2>

@if (SignInManager.IsSignedIn(User))
{
    <p><a asp-page="Create">Create New</a></p>
}

<table class="table">
    <thead>
        <tr>
            <th>Number
            </th>
            <th>Name
            </th>
            <th>Time
            </th>
            <th>Number of sessions
            </th>
                    
            @if (SignInManager.IsSignedIn(User))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model.Data.Activities)
        {
            <tr>
                <td><display-tag for="Data.Activities[i].Id"/>
                </td>
                <td><display-tag for="Data.Activities[i].Name" />
                </td>
                <td><display-tag for="Data.Activities[i].LocalTimeStamp" />
                </td>
                <td><display-tag for="Data.Activities[i].SessionCount" />
                </td>
                    
                @if (SignInManager.IsSignedIn(User))
                {
                    <td>
                        <a asp-page="Details" asp-route-id="Data.Activities[i].Id">Details</a> |
                        <a asp-page="Delete" asp-route-id="Data.Activities[i].Id">Delete</a>
                    </td>
                }
            </tr>
            i++;
        }
    </tbody>
</table>
