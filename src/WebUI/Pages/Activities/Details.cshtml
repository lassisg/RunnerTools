@page "{id:int}"
@model Activities.Details

@{
    ViewData["Title"] = "Details";
}

<h2>@ViewData["Title"] Activity</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Number
        </dt>
        <dd>@Model.Data.Id
        </dd>
        <dt>Name
        </dt>
        <dd>@Model.Data.Name
        </dd>
        <dt>Time
        </dt>
        <dd>@Model.Data.LocalTimeStamp
        </dd>
        <dt>Number of sessions
        </dt>
        <dd>@Model.Data.SessionCount
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>