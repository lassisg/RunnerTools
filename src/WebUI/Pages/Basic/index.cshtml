@page
@model Basic.index

@{
    ViewData["Title"] = "Basic calculations";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">
    <form method="post" class="col-4 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-header">
                <h3>Speed to Cadence</h3>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3 row">

                    <div class="col-6">
                        <label class="form-label" asp-for="SpeedData.Speed"></label>
                        <div class="row">
                            <div class="col-8">
                                <input class="form-control" asp-for="SpeedData.Speed" type="number" step="any" asp-format="{0:F}">
                                <span class="text-danger" asp-validation-for="SpeedData.Speed"></span>
                            </div>
                            <label class="col-auto col-form-label ps-0">km/h</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <label class="form-label" asp-for="SpeedData.Cadence"></label>
                        <div class="row">
                            <label class="col-form-label">
                                <span class="fw-bold">@($"{Model.SpeedData.Cadence:mm\\:ss}")</span> min/km
                            </label>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Calculate" class="btn btn-primary" asp-page-handler="Speed"/>
            </div>
        </div>
    </form>

    <form method="post" class="col-4 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-header">
                <h3>Cadence to Speed</h3>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3 row">

                    <div class="col-6">
                        <label class="form-label" asp-for="CadenceData.Cadence"></label>
                        <div class="row">
                            <div class="col-8">
                                <input class="form-control" asp-for="CadenceData.Cadence" type="time" asp-format="{0:mm\:ss}">
                                <span class="text-danger" asp-validation-for="CadenceData.Cadence"></span>
                            </div>
                            <label class="col-auto col-form-label ps-0">min/km</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <label class="form-label" asp-for="CadenceData.Speed"></label>
                        <div class="row">
                            <label class="col-form-label">
                                <span class="fw-bold">@($"{Model.CadenceData.Speed:F}")</span> km/h
                            </label>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Calculate" class="btn btn-primary" asp-page-handler="Cadence"/>
            </div>
        </div>
    </form>
</div>