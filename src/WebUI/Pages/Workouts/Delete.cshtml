@page "{id:int}"
@model Workouts.Delete

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this Workout?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Number
        </dt>
        <dd>@Model.Data.Id
        </dd>
        <dt>Name
        </dt>
        <dd>@Model.Data.Name
        </dd>
        <dt>Sport
        </dt>
        <dd>@Model.Data.Sport
        </dd>
        <dt>Valid steps
        </dt>
        <dd>@Model.Data.NumberOfValidSteps
        </dd>
    </dl>
    
    <form method="post">
        <input-tag for="@Model.Data.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Index">Back to List</a>
    </form>
</div>
